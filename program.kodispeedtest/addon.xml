<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="program.kodispeedtest"
       name="SpeedTest Kodi"
       version="0.0.1"
       provider-name="Speedtest.net">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">Kodi Prueba de velocidad</summary>
    <description lang="es"> Herramienta para controlar la velocidad de tu red, basada en speedtest.net de ookla.</description>
    <platform>all</platform>
  </extension>
</addon>
